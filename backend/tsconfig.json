{
    "compilerOptions": {
        "target": "ES6",
        "module": "nodenext",
        "esModuleInterop": true,
        "lib": ["es6"],
        "types": ["node"],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}